package coets;

public class Coet {
	
	private String codi;
	private int[] pmax;
	private int[] pnow;
	
	public Coet() {}
	
	public Coet(String codi, int[] pmax) {
		this.codi = codi;
		this.pmax = pmax;
		this.pnow = new int[pmax.length];
		
	}
	
	public String getCodi() {
		return codi;
	}
	public void setCodi(String codi) {
		this.codi = codi;
	}
	public int[] getPropulsor() {
		return pmax;
	}
	public void setPropulsor(int[] pmax) {
		this.pmax = pmax;
	}
	public int[] getPnow() {
		return pnow;
	}
	
	public int getSpeed() {
		int speed =10;
		for( int s : pnow) {
			speed += s;
		}
		return speed;
	}
	
	
	
	public void accelerar() {
		for (int i=0; i > pnow.length ; i++ ) {
			pnow[i] = pnow[i] + 10;
		}
		
	}
	
	
}
