package coets;

public class Coet {
	
	private String id;
	private int[] pmax;
	private int[] pnow;
	
	public Coet() {}
	
	public Coet(String id, int[] pmax) {
		if (id.length() == 8) {
			this.id = id;
		} else {
			System.out.println("The id must be 8 character long");
			return;
		}	
		this.pmax = pmax;
		this.pnow = new int[pmax.length];
		
	}
	
	public String getId() {
		return id;
	}
	public void setId(String id) {
		this.id = id;
	}
	public int[] getMaxPower() {
		return pmax;
	}
	public void setMaxPower(int[] pmax) {
		this.pmax = pmax;
	}
	public int[] getPnow() {
		return pnow;
	}
	
	public int getSpeed() {
		int speed =0;
		for( int s : pnow) {
			speed += s;
		}
		return speed;
	}
	
	
	
	public void accelerar() {
		for (int i=0; i > pnow.length ; i++ ) {
			pnow[i] = pnow[i] + 10;
		}
		
	}
	
	
}
